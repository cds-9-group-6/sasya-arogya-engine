    end
    
    subgraph "External Data Sources"
        R[🏛️ Government APIs]
        S[🏢 Insurance APIs]
        T[📊 Weather APIs]
        U[🗄️ Database Services]
    end
    
    %% LangGraph Flow
    A --> B
    B --> C
    C --> D
    D --> E
    D --> F
    
    %% Intent Analysis
    C --> G
    G --> H
    H --> I
    I --> D
    
    %% MCP Integration
    D --> J
    J --> K
    K --> L
    L --> M
    
    %% MCP Tools
    M --> N
    M --> O
    M --> P
    M --> Q
    
    %% External Data
    N --> R
    N --> S
    O --> S
    P --> S
    Q --> T
    Q --> U
    
    %% Response Flow
    N --> J
    O --> J
    P --> J
    Q --> J
    
    J --> D
    
